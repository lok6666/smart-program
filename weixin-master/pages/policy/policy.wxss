/* pages/newList/newList.wxml.wxss */
.banner-area{
  width: 100%;
  height: 200rpx;
  background-image: url("https://preview.ibb.co/kmbUKa/banner_guide.png");
  background-size: 100%;
  display: flex;
  align-items: center;
}
.search-section{
  width: 90%;
  height: 80rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 5%;
  border-radius: 40rpx;
}
.search-text{
  color: #78D1E9;
  font-family: "微软雅黑";
}
.channel-block{
  width: 33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding-bottom: 30rpx;
}

.article-title{
  color: black;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-bottom: 30rpx;
}

.article-new {
  background: #fff;
  padding-left: 10rpx;
}
.article-new-item {
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-bottom: 1px none rgb(229, 229, 229);
  margin-bottom: 10px;
  border-bottom-style: solid;
}
.article-new-item .consult-text{
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
  font-family: "微软雅黑";
  margin-right: 20rpx;
}